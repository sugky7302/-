{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "執行",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\執行.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "配置",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\配置.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "語法檢查",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\語法檢查.lua",
                "${workspaceRoot}"
            ],
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "Lni",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "lni",
                "${workspaceRoot}/TheTiltedCLockTower.w3x",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "Obj",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "obj",
                "${workspaceRoot}",
                "${workspaceRoot}/TheTiltedCLockTower.w3x"
            ]
        },
        {
            "label": "Slk",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "slk",
                "${workspaceRoot}",
                "${workspaceRoot}/TheTiltedCLockTower.w3x"
            ]
        },
        {
            "label": "Lua自動語法檢測",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\語法檢查.lua",
                "${workspaceRoot}",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[Watch\\] File change detected\\.",
                    "endsPattern": "\\[Watch\\] Complete\\."
                }
            }
        },
        {
            "label": "執行Lua代碼",
            "command": "chcp 65001 &&echo 需要注意YDWE的Lua無法在這裡執行，原生的可以 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "${file}"
            ]
        },
        {
            "label": "jass語法檢查",
            "command": "chcp 65001  && echo 根目錄路徑過長會出錯 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                ".\\tools\\jass語法檢查.lua",
                "${workspaceRoot}",
                "--watch",
                "${file}",
                "${fileExtname}",
                "${fileDirname}",
                "${fileBasename}"
            ]
        },
        {
            "label": "jass編譯",
            "command": "chcp 65001 && echo 根目錄路徑過長會出錯 &&  \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                ".\\tools\\jass语法检查.lua",
                "${workspaceRoot}",
                "--notwatch",
                "${file}",
                "${fileExtname}",
                "${fileDirname}",
                "${fileBasename}"
            ]
        }
    ]
}